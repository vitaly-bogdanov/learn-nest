generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model Artist {
  id     Int     @id @default(autoincrement())
  name   String
  albums Album[]
  tracks Track[]
}

model Album {
  id       Int     @id @default(autoincrement())
  artistId Int?
  artist   Artist? @relation(fields: [artistId], references: [id])
  tracks   Track[]
}

model Track {
  id       Int       @id @default(autoincrement())
  listens  Int       @default(0)
  name     String
  picture  String
  audio    String
  artistId Int?
  albumId  Int?
  album    Album?    @relation(fields: [albumId], references: [id])
  artist   Artist?   @relation(fields: [artistId], references: [id])
  comments Comment[]
}

model Comment {
  id      Int    @id @default(autoincrement())
  user    String
  text    String
  trackId Int?
  track   Track? @relation(fields: [trackId], references: [id])
}
